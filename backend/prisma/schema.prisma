datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Store {
  id      Int    @id @default(autoincrement())
  name    String
  address String
  books   StoreBook[]
}

model Book {
  id       Int    @id @default(autoincrement())
  name     String
  pages    Int
  author   Author @relation(fields: [authorId], references: [id])
  authorId Int
  stores   StoreBook[]
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model StoreBook {
  store   Store @relation(fields: [storeId], references: [id])
  storeId Int
  book    Book  @relation(fields: [bookId], references: [id])
  bookId  Int
  price   Float
  soldOut Boolean @default(false)
  @@id([storeId, bookId])
}
